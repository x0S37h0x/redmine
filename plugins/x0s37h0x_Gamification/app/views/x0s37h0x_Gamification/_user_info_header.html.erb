<div class="custom-header-info">
  <div class="avatar-section">
    <img src="<%= User.current.avatar_url %>" alt="Avatar" class="user-avatar" />
  </div>
  <div class="user-details">
    <p class="user-name"><%= User.current.name %></p>
    <p class="user-level">Level: <%= User.current.level %> - Klasse: Krieger</p> <!-- Beispielklasse "Krieger" -->
    
    <div class="progress-bar health-bar">
      <div class="progress-fill" style="width: <%= User.current.leben %>%;">Leben: <%= User.current.leben %>%</div>
    </div>

    <div class="progress-bar mana-bar">
      <div class="progress-fill" style="width: <%= User.current.mana %>%;"></div>
    </div>

     <div class="progress-bar exp-bar">
      <%# Calculate the percentage of current EXP toward the next level %>
      <div class="progress-fill" style="width: <%= (User.current.exp.to_f / User.current.max_exp) * 100 %>%;">
        <%= User.current.exp %> / <%= User.current.max_exp %> EXP
      </div>
    </div>
  </div>
</div>