<%= form_with(model: level_requirement, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :level, 'Level' %>
    <%= form.number_field :level, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :exp_required, 'Erforderliche Erfahrung (EXP)' %>
    <%= form.number_field :exp_required, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
